pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'cd C:\Terraform\Jun-24-2024\Terraform-Jenkins && terraform init'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh 'cd C:\Terraform\Jun-24-2024 && terraform apply -auto-approve'
            }
        }
    }
}
